@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-9">
        <div class="product-info">
            <img src="~/img/VanGogh.jpg" alt="Image" />
            <h3>Mug</h3>
            <ul class="product-properties">
                <li>Price: $9.99</li>
                <li>Artist: Van Gogh</li>
                <li>Title: </li>
                <li>Description: Self-Portrait</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy</button>
        </div>

        <div id="theForm">
            <form action="/" method="post">
                <label>Your Name:</label>
                <br />
                <input type="text" name="name" value="" />
                <br />
                <label>Email:</label>
                <br />
                <input type="email" name="name" value="" />
                <br />
                <label>Subject:</label>
                <br />
                <input type="text" name="name" value="" />
                <br />
                <label>Message:</label>
                <br />
                <textarea rows="4"></textarea>
                <br />
                <input type="submit" name="name" value="Send Message" />
            </form>
        </div>

        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input type="text" name="name" value="" />
                </div>
                <div>
                    <label>Username</label>
                    <input type="password" name="Password" value="" />
                </div>
                <div>
                    <input type="checkbox" name="name" value="" />
                    <label>Remember me?</label>
                </div>
                <div>
                    <input type="submit" value="login" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3"> Buy Dutch Paintings</div>
</div>

   